<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, interactive-widget=resizes-content">
    <title>Chat with <%= target.name %></title>
    <link rel="stylesheet" href="/style.css">
    <script src="/socket.io/socket.io.js"></script>
    <style>
        /* Romantic pink theme */
        body { 
            background-color: #fff5f7; 
            margin: 0; 
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
            /* Prevent body scroll, let chat container handle scrolling */
            height: 100vh;
            overflow: hidden; 
        }
        
        .chat-container {
            max-width: 600px;
            /* Use dvh (dynamic viewport height) for better mobile support */
            height: 85vh; 
            margin: 20px auto;
            background: #fff;
            display: flex;
            flex-direction: column;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(255, 105, 180, 0.18);
            overflow: hidden;
            position: relative; /* Needed for absolute/sticky children */
        }

        .chat-header {
            padding: 15px 20px;
            background: linear-gradient(135deg, #ff69b4, #ff1493);
            color: white;
            display: flex;
            align-items: center;
            gap: 15px;
            
            /* --- THIS LOCKS THE NAME TO THE TOP --- */
            position: sticky;
            top: 0;
            z-index: 100; /* Ensure it stays above messages */
            flex-shrink: 0; /* Prevent header from shrinking when keyboard opens */
            /* -------------------------------------- */
        }

        .chat-header .back-btn { 
            color: white; 
            text-decoration: none; 
            font-size: 20px; 
        }
        
        .avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #ff69b4, #db7093);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: white;
            text-transform: uppercase;
        }

        #chat-window {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
            display: flex;
            flex-direction: column;
            gap: 12px;
            background-image: url('https://www.transparenttextures.com/patterns/cubes.png');
            background-color: #fffaf5;
            scroll-behavior: smooth;
        }

        .msg {
            max-width: 75%;
            padding: 10px 14px;
            border-radius: 18px;
            font-size: 15px;
            position: relative;
            animation: fadeIn 0.3s ease;
            word-wrap: break-word; /* Prevents long words breaking layout */
        }

        @keyframes fadeIn { from { opacity: 0; transform: translateY(5px); } to { opacity: 1; transform: translateY(0); } }

        .my-msg {
            align-self: flex-end;
            background: linear-gradient(135deg, #ff69b4, #ff1493);
            color: white;
            border-bottom-right-radius: 2px;
        }

        .their-msg {
            align-self: flex-start;
            background-color: #ffe4e9;
            color: #4a2c3b;
            border-bottom-left-radius: 2px;
        }

        .chat-footer {
            padding: 15px;
            background: white;
            border-top: 1px solid #ffe4e9;
            display: flex;
            gap: 10px;
            /* Ensure footer stays at bottom */
            flex-shrink: 0; 
        }

        #messageInput {
            flex: 1;
            border: 1px solid #ffe4e9;
            padding: 12px 18px;
            border-radius: 25px;
            outline: none;
            transition: border 0.3s;
        }

        #messageInput:focus { 
            border-color: #ff69b4; 
        }

        .send-btn {
            background: linear-gradient(90deg, #ff69b4, #ff1493);
            color: white;
            border: none;
            padding: 0 20px;
            border-radius: 25px;
            cursor: pointer;
            font-weight: bold;
            transition: background 0.3s;
        }

        .send-btn:hover { 
            background: linear-gradient(90deg, #ff1493, #ff69b4); 
        }

        /* --- MOBILE OPTIMIZATION --- */
        /* This makes the chat look like a native app on phones */
        @media (max-width: 768px) {
            body {
                background-color: #fff; /* Blend with chat */
            }
            .chat-container {
                margin: 0;
                width: 100%;
                height: 100dvh; /* Dynamic Viewport Height handles mobile url bars better */
                border-radius: 0;
                max-width: none;
                box-shadow: none;
            }
        }
    </style>
</head>
<body>

<div class="chat-container">
    <div class="chat-header">
        <a href="/messages" class="back-btn">‚Üê</a>
        <div class="avatar"><%= target.name.charAt(0) %></div>
        <div>
            <div style="font-weight: bold;"><%= target.name %></div>
        </div>
    </div>

    <div id="chat-window">
        <% history.forEach(msg => { %>
            <div class="msg <%= msg.senderId == me._id ? 'my-msg' : 'their-msg' %>">
                <%= msg.text %>
            </div>
        <% }) %>
    </div>

    <div class="chat-footer">
        <input type="text" id="messageInput" placeholder="Type a message..." autocomplete="off">
        <button class="send-btn" id="sendBtn">Send</button>
    </div>
</div>

<script>
    const socket = io();
    const myId = "<%= me._id %>";
    const targetId = "<%= target._id %>";
    const roomId = "<%= [me._id, target._id].sort().join('-') %>"; 

    // 1. Join the room immediately
    socket.emit('join-room', roomId);

    const chatWindow = document.getElementById('chat-window');
    const input = document.getElementById('messageInput');
    const sendBtn = document.getElementById('sendBtn');

    // 2. Helper function to scroll to bottom
    const scrollToBottom = () => {
        chatWindow.scrollTop = chatWindow.scrollHeight;
    };

    // Initial scroll on page load
    scrollToBottom();

    // 3. SINGLE Listener for receiving messages
    socket.on('receive-message', (data) => {
        const msgDiv = document.createElement('div');
        
        const isMe = data.senderId === myId;
        msgDiv.className = `msg ${isMe ? 'my-msg' : 'their-msg'}`;
        
        msgDiv.textContent = data.text;
        chatWindow.appendChild(msgDiv);
        
        scrollToBottom();
    });

    // 4. Send Message Function
    function sendMessage() {
        const text = input.value.trim();
        if (text === "") return;

        socket.emit('send-chat-message', {
            roomId: roomId,
            senderId: myId,
            receiverId: targetId,
            message: text,
            senderName: "<%= me.name %>" 
        });

        input.value = '';
        input.focus(); 
        
        // Small delay to ensure keyboard ensures view is correct
        setTimeout(scrollToBottom, 100);
    }

    // 5. Event Listeners
    sendBtn.addEventListener('click', sendMessage);

    input.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
            sendMessage();
        }
    });

    // Fix for mobile keyboard: Scroll to bottom when input is focused
    input.addEventListener('focus', () => {
        setTimeout(scrollToBottom, 300);
    });
</script>
</body>
</html>
