<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, interactive-widget=resizes-content">
    <title>Chat with <%= target.name %></title>
    <link rel="stylesheet" href="/style.css">
    <script src="/socket.io/socket.io.js"></script>
    <style>
        /* Romantic pink theme */
        body, html { 
            margin: 0; 
            padding: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; 
            background-color: #fff5f7; 
            /* Fix for iOS bounce effect */
            height: 100%; 
            width: 100%;
            overflow: hidden; 
            position: fixed; /* Locks body in place on iOS */
        }
        
        .chat-container {
            width: 100%;
            max-width: 600px;
            /* Default for desktop */
            height: 100%; 
            margin: 0 auto;
            background: #fff;
            display: flex;
            flex-direction: column;
            position: relative;
        }

        /* Desktop specific tweaks */
        @media (min-width: 769px) {
            .chat-container {
                height: 85vh;
                margin-top: 20px;
                border-radius: 12px;
                box-shadow: 0 10px 25px rgba(255, 105, 180, 0.18);
            }
        }

        .chat-header {
            padding: 15px 20px;
            background: linear-gradient(135deg, #ff69b4, #ff1493);
            color: white;
            display: flex;
            align-items: center;
            gap: 15px;
            /* Flex-shrink 0 ensures header never gets squashed */
            flex-shrink: 0;
            z-index: 10;
        }

        .chat-header .back-btn { 
            color: white; 
            text-decoration: none; 
            font-size: 20px; 
        }
        
        .avatar {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #ff69b4, #db7093);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            color: white;
            text-transform: uppercase;
        }

        #chat-window {
            flex: 1; /* Takes up all available remaining space */
            padding: 20px;
            overflow-y: auto; /* Only this part scrolls */
            -webkit-overflow-scrolling: touch; /* Smooth scrolling on iOS */
            display: flex;
            flex-direction: column;
            gap: 12px;
            background-image: url('https://www.transparenttextures.com/patterns/cubes.png');
            background-color: #fffaf5;
        }

        .msg {
            max-width: 75%;
            padding: 10px 14px;
            border-radius: 18px;
            font-size: 15px;
            word-wrap: break-word;
        }

        .my-msg {
            align-self: flex-end;
            background: linear-gradient(135deg, #ff69b4, #ff1493);
            color: white;
            border-bottom-right-radius: 2px;
        }

        .their-msg {
            align-self: flex-start;
            background-color: #ffe4e9;
            color: #4a2c3b;
            border-bottom-left-radius: 2px;
        }

        .chat-footer {
            padding: 15px;
            background: white;
            border-top: 1px solid #ffe4e9;
            display: flex;
            gap: 10px;
            flex-shrink: 0; /* Ensures footer never gets squashed */
            /* iOS Safe Area fix for iPhone X/11/12+ */
            padding-bottom: env(safe-area-inset-bottom, 20px); 
        }

        #messageInput {
            flex: 1;
            border: 1px solid #ffe4e9;
            padding: 12px 18px;
            border-radius: 25px;
            outline: none;
            font-size: 16px; /* Prevents auto-zoom on iOS inputs */
        }

        #messageInput:focus { 
            border-color: #ff69b4; 
        }

        .send-btn {
            background: linear-gradient(90deg, #ff69b4, #ff1493);
            color: white;
            border: none;
            padding: 0 20px;
            border-radius: 25px;
            cursor: pointer;
            font-weight: bold;
        }
    </style>
</head>
<body>

<div class="chat-container" id="appContainer">
    <div class="chat-header">
        <a href="/messages" class="back-btn">‚Üê</a>
        <div class="avatar"><%= target.name.charAt(0) %></div>
        <div>
            <div style="font-weight: bold;"><%= target.name %></div>
        </div>
    </div>

    <div id="chat-window">
        <% history.forEach(msg => { %>
            <div class="msg <%= msg.senderId == me._id ? 'my-msg' : 'their-msg' %>">
                <%= msg.text %>
            </div>
        <% }) %>
    </div>

    <div class="chat-footer">
        <input type="text" id="messageInput" placeholder="Type a message..." autocomplete="off">
        <button class="send-btn" id="sendBtn">Send</button>
    </div>
</div>

<script>
    const socket = io();
    const myId = "<%= me._id %>";
    const targetId = "<%= target._id %>";
    const roomId = "<%= [me._id, target._id].sort().join('-') %>"; 
    
    // Elements
    const chatWindow = document.getElementById('chat-window');
    const input = document.getElementById('messageInput');
    const sendBtn = document.getElementById('sendBtn');
    const appContainer = document.getElementById('appContainer');

    // Join room
    socket.emit('join-room', roomId);

    // Scroll helper
    const scrollToBottom = () => {
        chatWindow.scrollTop = chatWindow.scrollHeight;
    };
    scrollToBottom();

    // ==========================================
    //  CRITICAL IOS KEYBOARD FIX
    // ==========================================
    if (window.visualViewport) {
        window.visualViewport.addEventListener('resize', () => {
            // This forces the container to match the visible screen height
            // (the space above the keyboard)
            appContainer.style.height = `${window.visualViewport.height}px`;
            scrollToBottom();
        });
        
        // Initial set
        appContainer.style.height = `${window.visualViewport.height}px`;
    }
    // ==========================================

    socket.on('receive-message', (data) => {
        const msgDiv = document.createElement('div');
        const isMe = data.senderId === myId;
        msgDiv.className = `msg ${isMe ? 'my-msg' : 'their-msg'}`;
        msgDiv.textContent = data.text;
        chatWindow.appendChild(msgDiv);
        scrollToBottom();
    });

    function sendMessage() {
        const text = input.value.trim();
        if (text === "") return;

        socket.emit('send-chat-message', {
            roomId: roomId, senderId: myId, receiverId: targetId,
            message: text, senderName: "<%= me.name %>"
        });

        input.value = '';
        input.focus();
        setTimeout(scrollToBottom, 100);
    }

    sendBtn.addEventListener('click', sendMessage);
    input.addEventListener('keypress', (e) => { if (e.key === 'Enter') sendMessage(); });
</script>
</body>
</html>
